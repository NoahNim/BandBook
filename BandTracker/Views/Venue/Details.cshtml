@using BandTracker.Models;

<html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Band Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
  </head>
  <body>
    <div class = "container text-center">
      <h1>Band Tracker</h1>
      <h2>Venue: @Model["selectedVenue"].GetName()</h2>
      <hr />
      @if (@Model["venueBands"].Count != 0)
      {
        <h4>Here are all the bands that have played at this venue:</h4>
        <ul>
          @foreach (var band in @Model["venueBands"])
          {
            <li>@band.GetName()</li>
          }
        </ul>
      }
      <h4>Add a band to this category:</h4>
      <form action="/venues/@Model["selectedVenue"].GetId()/bands/new" method='post'>
        <label for='band-id'>Select a band</label>
        <select id='band-id' name='band-id' type='text'>
          @foreach (var band in @Model["allBands"])
          {
            <option value='@band.GetId()'>@band.GetName()</option>
          }
        </select>
        <button type='submit'>Add</button>
      </form>
      <p><a href="/">Return to Main Page</a></p>
    </div>
  </body>
<html>
